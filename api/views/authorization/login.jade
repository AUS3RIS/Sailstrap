extends ../layouts/default

block body
	form(method='post', action='/process')
		div.form-group
			label(for='usernameInput') Username
			input#usernameInput.form-control(type='email', name='username', placeholder='Enter your username')
		div.form-group
			label(for='passwordInput') Password
			input#usernameInput.form-control(type='password', name='password', placeholder='Enter your password')
		button.btn.btn-primary(type='submit') Authorize